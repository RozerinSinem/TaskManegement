@model IEnumerable<TaskViewModel>

<link rel="stylesheet" type="text/css" href="~/css/site.css" />

<h1 class="text-center">Assign Tasks to Users</h1>


<form asp-action="AssignTask" asp-controller="Task" method="post">
    <div class="table-responsive">
        <table class="custom-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Assigned User</th>
                    <th>Assign</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var task in Model)
                {
                    <tr>
                        <td>@task.TaskID</td>
                        <td>@task.Name</td>
                        <td>@task.Description</td>
                        <td>
                            @Html.DropDownList("AssignedUser", ViewBag.UserNames, "Select User", new { @class = "form-control" })
                        </td>
                        <td>
                            <button type="submit" name="taskId" value="@task.TaskID" class="btn btn-primary">Assign</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</form>
